      <ul>
        <li><a href="/admin" class="<%= title === 'Shopify â†’ aXcelerate Integration' ? 'active' : '' %>">Dashboard</a></li>
        <li><a href="/admin/logs" class="<%= title === 'Sync Logs' ? 'active' : '' %>">Sync Logs</a></li>
