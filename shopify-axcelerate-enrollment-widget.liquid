{% comment %}
  aXcelerate Enrollment Widget - With Multi-Step and Existing Record Check
  
  Features:
  - Google OAuth login (working)
  - aXcelerate OAuth login
  - Manual form with existing record detection
  - Background step with custom fields
  
  Usage:
  {% render 'axcelerate-enrollment-widget', 
    course_id: '94138', 
    course_type: 'w', 
    instance_id: '2103213'
  %}
{% endcomment %}

{% assign widget_id = config_id | default: 'default' %}

<div id="ax-enrol-widget-{{ widget_id }}" 
     class="ax-enrollment-widget"
     data-course-id="{{ course_id }}"
     data-course-type="{{ course_type }}"
     data-instance-id="{{ instance_id }}">
  
  <div class="ax-widget-container">
    <h2 class="ax-widget-title">ENROLLING IN</h2>
    <h3 id="ax-course-title-{{ widget_id }}" class="ax-course-title" style="display: none;"></h3>
    
    <!-- Loading State -->
    <div id="ax-loading-{{ widget_id }}" class="ax-loading-state">
      <div class="ax-spinner"></div>
      <p>Loading enrollment form...</p>
    </div>
    
    <!-- Error State -->
    <div id="ax-error-{{ widget_id }}" class="ax-error-state" style="display: none;">
      <p class="ax-error-message"></p>
      <button class="ax-retry-btn">Retry</button>
    </div>
    
    <!-- Multi-Step Form -->
    <div id="ax-form-{{ widget_id }}" class="ax-enrollment-form" style="display: none;">
      
      <!-- Progress Steps -->
      <div class="ax-progress-steps">
        <div class="ax-step active" data-step="login">
          <span class="ax-step-indicator">1</span>
          <span class="ax-step-label">Login</span>
        </div>
        <div class="ax-step" data-step="background">
          <span class="ax-step-indicator">2</span>
          <span class="ax-step-label">Background</span>
        </div>
        <div class="ax-step" data-step="personal">
          <span class="ax-step-indicator">3</span>
          <span class="ax-step-label">Personal</span>
        </div>
        <div class="ax-step" data-step="contact">
          <span class="ax-step-indicator">4</span>
          <span class="ax-step-label">Contact</span>
        </div>
      </div>
      
      <!-- STEP 1: LOGIN -->
      <div id="ax-step-login-{{ widget_id }}" class="ax-step-content" data-step="login">
        <!-- Social Login Options -->
        <div class="ax-social-login">
          <button type="button" class="ax-social-btn ax-google-btn">
            <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Continue with Google
          </button>
          
          <button type="button" class="ax-social-btn ax-axcelerate-btn">
            <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M13 3l-1.41 1.41L17.17 10H3v2h14.17l-5.58 5.59L13 19l8-8z"/>
            </svg>
            Continue with aXcelerate
          </button>
          
          <p class="ax-login-powered">
            Login Powered by <a href="https://www.axcelerate.com" target="_blank">aXcelerate Student Management System</a>
          </p>
        </div>
        
        <div class="ax-divider">
          <span>Or continue with your name and email</span>
        </div>
        
        <!-- Manual Entry Form -->
        <form id="ax-manual-form-{{ widget_id }}" class="ax-manual-form">
          <div class="ax-form-group">
            <label for="ax-given-name-{{ widget_id }}">
              Given Name:<span class="ax-required">*</span>
            </label>
            <input 
              type="text" 
              id="ax-given-name-{{ widget_id }}"
              name="givenName"
              class="ax-input"
              required
            />
          </div>
          
          <div class="ax-form-group">
            <label for="ax-family-name-{{ widget_id }}">
              Family Name:<span class="ax-required">*</span>
            </label>
            <input 
              type="text" 
              id="ax-family-name-{{ widget_id }}"
              name="familyName"
              class="ax-input"
              required
            />
          </div>
          
          <div class="ax-form-group">
            <label for="ax-email-{{ widget_id }}">
              Email:<span class="ax-required">*</span>
            </label>
            <input 
              type="email" 
              id="ax-email-{{ widget_id }}"
              name="email"
              class="ax-input"
              required
            />
          </div>
          
          <button type="submit" class="ax-create-btn">
            <span>CREATE</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M8 3V13M3 8H13" stroke="white" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </form>
      </div>
      
      <!-- STEP 2: BACKGROUND QUESTIONS -->
      <div id="ax-step-background-{{ widget_id }}" class="ax-step-content" data-step="background" style="display: none;">
        <form id="ax-background-form-{{ widget_id }}" class="ax-background-form">
          
          <!-- USI -->
          <div class="ax-form-group">
            <label>
              Have you obtained your USI?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_OBTAINUSI" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
            <p class="ax-help-text" style="display: none;">
              Please refer to <a href="https://www.usi.gov.au" target="_blank">https://www.usi.gov.au</a>. 
              Every student must provide their USI before commencing.
            </p>
          </div>
          
          <!-- Previous Study -->
          <div class="ax-form-group">
            <label>
              Have you undertaken this type of study before?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_PREVIOUSSTUDY" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Study Outcome -->
          <div class="ax-form-group">
            <label>
              Did you achieve a successful outcome?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_STUDYOUTCOME" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Dedicate Time -->
          <div class="ax-form-group">
            <label>
              Can you dedicate time to pre-reading and study?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_DEDICATETIME" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Confirm">Confirm</option>
              <option value="Deny">Deny</option>
            </select>
          </div>
          
          <!-- Deadlines -->
          <div class="ax-form-group">
            <label>
              Are you comfortable meeting deadlines?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_DEADLINES" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Work/Life/Study Balance -->
          <div class="ax-form-group">
            <label>
              Have you discussed this with family/employer?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_WORKLIFESTUDY" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Internet Access -->
          <div class="ax-form-group">
            <label>
              Do you have reliable Internet access?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_INTERNETACCESS" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Standing Periods -->
          <div class="ax-form-group">
            <label>
              Aware of standing for long periods?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_STANDINGPERIODS" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Multi-tasking -->
          <div class="ax-form-group">
            <label>
              Aware of multi-tasking requirements?
            </label>
            <select name="CUSTOMFIELD_MULTITASKING" class="ax-input">
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
          </div>
          
          <!-- Language/Numeracy -->
          <div class="ax-form-group">
            <label>
              Any language/literacy/numeracy concerns?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_LANGUAGENUMERACY" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
            <p class="ax-help-text" style="display: none;">
              A BMT representative will discuss this with you.
            </p>
          </div>
          
          <!-- English Rating -->
          <div class="ax-form-group">
            <label>
              Rate your spoken English (1=Poor, 5=Excellent)<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_SPEAKENGLISH" class="ax-input" required>
              <option value="">Select...</option>
              <option value="1">1 - Poor</option>
              <option value="2">2</option>
              <option value="3">3 - Average</option>
              <option value="4">4</option>
              <option value="5">5 - Excellent</option>
            </select>
          </div>
          
          <!-- Computer Skills -->
          <div class="ax-form-group">
            <label>
              Rate your computer skills (1=Poor, 5=Excellent)<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_COMPUTERSKILLS" class="ax-input" required>
              <option value="">Select...</option>
              <option value="1">1 - Poor</option>
              <option value="2">2</option>
              <option value="3">3 - Average</option>
              <option value="4">4</option>
              <option value="5">5 - Excellent</option>
            </select>
          </div>
          
          <!-- Medical Issues -->
          <div class="ax-form-group">
            <label>
              Any medical/physical conditions we should know about?<span class="ax-required">*</span>
            </label>
            <select name="CUSTOMFIELD_MEDICALISSUES" class="ax-input" required>
              <option value="">Select...</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
            <p class="ax-help-text" style="display: none;">
              A BMT representative will discuss this with you.
            </p>
          </div>
          
          <div class="ax-button-group">
            <button type="button" class="ax-btn-secondary ax-btn-back">Back</button>
            <button type="submit" class="ax-btn-primary">Continue</button>
          </div>
        </form>
      </div>
      
      <!-- STEP 3: PERSONAL DETAILS (Placeholder for now) -->
      <div id="ax-step-personal-{{ widget_id }}" class="ax-step-content" data-step="personal" style="display: none;">
        <p>Personal details step coming soon...</p>
        <div class="ax-button-group">
          <button type="button" class="ax-btn-secondary ax-btn-back">Back</button>
          <button type="button" class="ax-btn-primary ax-btn-next">Continue</button>
        </div>
      </div>
      
      <!-- STEP 4: CONTACT DETAILS (Placeholder for now) -->
      <div id="ax-step-contact-{{ widget_id }}" class="ax-step-content" data-step="contact" style="display: none;">
        <p>Contact details step coming soon...</p>
        <div class="ax-button-group">
          <button type="button" class="ax-btn-secondary ax-btn-back">Back</button>
          <button type="button" class="ax-btn-primary">Submit Enrollment</button>
        </div>
      </div>
    </div>
    
    <!-- Success State -->
    <div id="ax-success-{{ widget_id }}" class="ax-success-state" style="display: none;">
      <div class="ax-success-icon">âœ“</div>
      <h3>Enrollment Submitted Successfully!</h3>
      <p class="ax-success-message"></p>
    </div>
  </div>
  
  <!-- Existing Record Modal -->
  <div id="ax-existing-record-modal-{{ widget_id }}" class="ax-modal" style="display: none;">
    <div class="ax-modal-overlay"></div>
    <div class="ax-modal-content">
      <button class="ax-modal-close">&times;</button>
      <h3>Existing Record Found</h3>
      <div class="ax-modal-body">
        <p>An existing record has been found.</p>
        <p>An email has been dispatched to <strong id="ax-modal-email"></strong> to verify your identity and allow you to continue enrolling.</p>
      </div>
      <div class="ax-modal-actions">
        <button class="ax-btn-primary ax-modal-ok">OK</button>
      </div>
    </div>
  </div>
</div>

<style>
