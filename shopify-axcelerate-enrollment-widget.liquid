{% comment %}
  aXcelerate Enrollment Widget for Shopify - FIXED VERSION
  
  Usage: 
  {% render 'axcelerate-enrollment-widget', 
    course_id: '94138', 
    course_type: 'w', 
    instance_id: '2103205',
    config_id: '3'
  %}
{% endcomment %}

{% assign widget_id = config_id | default: 'default' %}

<div id="ax-enrol-widget-{{ widget_id }}" 
     class="ax-enrollment-widget"
     data-course-id="{{ course_id }}"
     data-course-type="{{ course_type }}"
     data-instance-id="{{ instance_id }}"
     data-config-id="{{ widget_id }}">
  
  <div class="ax-widget-container">
    <h2 class="ax-widget-title">ENROLLING IN</h2>
    
    <!-- Loading State -->
    <div id="ax-loading-{{ widget_id }}" class="ax-loading-state">
      <div class="ax-spinner"></div>
      <p>Loading enrollment form...</p>
    </div>
    
    <!-- Error State -->
    <div id="ax-error-{{ widget_id }}" class="ax-error-state" style="display: none;">
      <p class="ax-error-message"></p>
      <button class="ax-retry-btn">Retry</button>
    </div>
    
    <!-- Enrollment Form -->
    <div id="ax-form-{{ widget_id }}" class="ax-enrollment-form" style="display: none;">
      
      <!-- Progress Steps -->
      <div class="ax-progress-steps">
        <div class="ax-step active" data-step="login">
          <span class="ax-step-indicator">1</span>
          <span class="ax-step-label">Login</span>
        </div>
        <div class="ax-step" data-step="background">
          <span class="ax-step-indicator">2</span>
          <span class="ax-step-label">Background</span>
        </div>
        <div class="ax-step" data-step="personal">
          <span class="ax-step-indicator">3</span>
          <span class="ax-step-label">Personal Details</span>
        </div>
        <div class="ax-step" data-step="contact">
          <span class="ax-step-indicator">4</span>
          <span class="ax-step-label">Contact Details</span>
        </div>
      </div>
      
      <!-- Step 1: Login -->
      
      <!-- Social Login Options -->
      <div class="ax-social-login">
        <button type="button" class="ax-social-btn ax-google-btn">
          <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Continue with Google
        </button>
        
        <button type="button" class="ax-social-btn ax-apple-btn" style="display: none;">
          <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
            <path fill="currentColor" d="M17.05 20.28c-.98.95-2.05.88-3.08.4-1.09-.5-2.08-.48-3.24 0-1.44.62-2.2.44-3.06-.4C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
          </svg>
          Continue with Apple
        </button>
        
        <button type="button" class="ax-social-btn ax-facebook-btn" style="display: none;">
          <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
            <path fill="#1877F2" d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Continue with Facebook
        </button>
        
        <button type="button" class="ax-social-btn ax-axcelerate-btn">
          <svg class="ax-icon" viewBox="0 0 24 24" width="20" height="20">
            <path fill="currentColor" d="M13 3l-1.41 1.41L17.17 10H3v2h14.17l-5.58 5.59L13 19l8-8z"/>
          </svg>
          Continue with aXcelerate
        </button>
        
        <p class="ax-login-powered">
          Login Powered by <a href="https://www.axcelerate.com" target="_blank">aXcelerate Student Management System</a>
        </p>
      </div>
      
      <div class="ax-divider">
        <span>Or continue with your name and email</span>
      </div>
      
      <!-- Manual Entry Form -->
      <form id="ax-manual-form-{{ widget_id }}" class="ax-manual-form">
        <div class="ax-form-group">
          <label for="ax-given-name-{{ widget_id }}">
            Given Name:<span class="ax-required">*</span>
          </label>
          <input 
            type="text" 
            id="ax-given-name-{{ widget_id }}"
            name="givenName"
            class="ax-input"
            required
          />
        </div>
        
        <div class="ax-form-group">
          <label for="ax-family-name-{{ widget_id }}">
            Family Name:<span class="ax-required">*</span>
          </label>
          <input 
            type="text" 
            id="ax-family-name-{{ widget_id }}"
            name="familyName"
            class="ax-input"
            required
          />
        </div>
        
        <div class="ax-form-group">
          <label for="ax-email-{{ widget_id }}">
            Email:<span class="ax-required">*</span>
          </label>
          <input 
            type="email" 
            id="ax-email-{{ widget_id }}"
            name="email"
            class="ax-input"
            required
          />
        </div>
        
        <button type="submit" class="ax-create-btn">
          <span>CREATE</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M8 3V13M3 8H13" stroke="white" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </form>
    </div>
    
    <!-- Success State -->
    <div id="ax-success-{{ widget_id }}" class="ax-success-state" style="display: none;">
      <div class="ax-success-icon">✓</div>
      <h3>Enrollment Submitted Successfully!</h3>
      <p class="ax-success-message"></p>
    </div>
  </div>
</div>

<style>
  .ax-enrollment-widget {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .ax-widget-container {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 40px;
  }
  
  .ax-widget-title {
    font-family: 'Playfair Display', serif;
    font-size: 48px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 40px;
    letter-spacing: -1px;
  }
  
  .ax-progress-steps {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
    padding: 0 20px;
  }
  
  .ax-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    position: relative;
    color: #ccc;
  }
  
  .ax-step::after {
    content: '';
    position: absolute;
    top: 12px;
    left: 60%;
    right: -50%;
    height: 2px;
    background: #e0e0e0;
    z-index: -1;
  }
  
  .ax-step:last-child::after {
    display: none;
  }
  
  .ax-step.active {
    color: #2196F3;
  }
  
  .ax-step.completed {
    color: #4CAF50;
  }
  
  .ax-step-indicator {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid currentColor;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    margin-bottom: 8px;
    font-weight: bold;
    font-size: 14px;
  }
  
  .ax-step.completed .ax-step-indicator::before {
    content: '✓';
  }
  
  .ax-step-label {
    font-size: 12px;
    text-align: center;
    font-weight: 500;
  }
  
  .ax-loading-state {
    text-align: center;
    padding: 60px 20px;
  }
  
  .ax-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #2196F3;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 20px;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .ax-error-state {
    text-align: center;
    padding: 40px 20px;
  }
  
  .ax-error-message {
    color: #f44336;
    margin-bottom: 20px;
  }
  
  .ax-retry-btn {
    background: #2196F3;
    color: white;
    border: none;
    padding: 12px 30px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
  }
  
  .ax-social-login {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-bottom: 30px;
  }
  
  .ax-social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 12px 20px;
    border: 1px solid #ddd;
    border-radius: 6px;
    background: white;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .ax-social-btn:hover {
    background: #f5f5f5;
    border-color: #999;
  }
  
  .ax-social-btn .ax-icon {
    flex-shrink: 0;
  }
  
  .ax-axcelerate-btn {
    grid-column: 1 / -1;
    background: #fff;
  }
  
  .ax-login-powered {
    grid-column: 1 / -1;
    font-size: 12px;
    color: #666;
    text-align: center;
    margin-top: 10px;
  }
  
  .ax-login-powered a {
    color: #2196F3;
    text-decoration: none;
  }
  
  .ax-divider {
    text-align: center;
    position: relative;
    margin: 30px 0;
  }
  
  .ax-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #ddd;
  }
  
  .ax-divider span {
    position: relative;
    background: white;
    padding: 0 20px;
    color: #666;
    font-size: 14px;
  }
  
  .ax-manual-form {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .ax-form-group {
    margin-bottom: 20px;
  }
  
  .ax-form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #333;
  }
  
  .ax-required {
    color: #f44336;
    margin-left: 2px;
  }
  
  .ax-input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    transition: border-color 0.2s;
  }
  
  .ax-input:focus {
    outline: none;
    border-color: #2196F3;
  }
  
  .ax-create-btn {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: #000;
    color: white;
    border: none;
    padding: 16px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    margin-top: 30px;
    transition: background 0.2s;
  }
  
  .ax-create-btn:hover {
    background: #333;
  }
  
  .ax-success-state {
    text-align: center;
    padding: 60px 20px;
  }
  
  .ax-success-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: #4CAF50;
    color: white;
    font-size: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }
  
  .ax-success-state h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }
  
  .ax-success-message {
    color: #666;
  }
  
  @media (max-width: 768px) {
    .ax-widget-container {
      padding: 20px;
    }
    
    .ax-widget-title {
      font-size: 32px;
    }
    
    .ax-social-login {
      grid-template-columns: 1fr;
    }
    
    .ax-progress-steps {
      display: none;
    }
  }
</style>

<script>
// Enhanced frontend widget JavaScript with OAuth support
// UPDATED to point to Render app

(function() {
  'use strict';
  
  // ⚠️ IMPORTANT: Update this to your Render app URL
  const RENDER_APP_URL = 'https://blackmarkettraining.onrender.com';
  
  function initWidget() {
    const widgetId = '{{ widget_id }}';
    const widget = document.getElementById('ax-enrol-widget-' + widgetId);
    
    if (!widget) {
      console.error('aXcelerate widget element not found');
      return;
    }
    
    const courseId = widget.dataset.courseId;
    const courseType = widget.dataset.courseType;
    const instanceId = widget.dataset.instanceId;
    
    const loadingEl = document.getElementById('ax-loading-' + widgetId);
    const errorEl = document.getElementById('ax-error-' + widgetId);
    const formEl = document.getElementById('ax-form-' + widgetId);
    const successEl = document.getElementById('ax-success-' + widgetId);
    
    if (!loadingEl || !errorEl || !formEl || !successEl) {
      console.error('Widget UI elements not found');
      return;
    }
    
    // Check if returning from OAuth
    checkOAuthReturn();
    
    // Initialize widget
    function init() {
      setTimeout(() => {
        loadingEl.style.display = 'none';
        formEl.style.display = 'block';
      }, 500);
      
      setupEventListeners();
    }
    
    function setupEventListeners() {
      // Social login buttons
      const googleBtn = widget.querySelector('.ax-google-btn');
      const appleBtn = widget.querySelector('.ax-apple-btn');
      const facebookBtn = widget.querySelector('.ax-facebook-btn');
      const axcelerateBtn = widget.querySelector('.ax-axcelerate-btn');
      
      if (googleBtn) {
        googleBtn.addEventListener('click', () => handleOAuthLogin('google'));
      }
      if (appleBtn) {
        appleBtn.addEventListener('click', () => handleOAuthLogin('apple'));
      }
      if (facebookBtn) {
        facebookBtn.addEventListener('click', () => handleOAuthLogin('facebook'));
      }
      if (axcelerateBtn) {
        axcelerateBtn.addEventListener('click', () => handleOAuthLogin('axcelerate'));
      }
      
      // Manual form submission
      const form = document.getElementById('ax-enrollment-form-' + widgetId);
      if (form) {
        form.addEventListener('submit', handleFormSubmit);
      }
      
      // Retry button
      const retryBtn = errorEl.querySelector('.ax-retry-btn');
      if (retryBtn) {
        retryBtn.addEventListener('click', () => {
          errorEl.style.display = 'none';
          loadingEl.style.display = 'block';
          init();
        });
      }
    }
    
    /**
     * Handle OAuth login redirect
     */
    function handleOAuthLogin(provider) {
      console.log(`Initiating ${provider} login...`);
      
      // Build OAuth URL - Point to Render app!
      const authUrl = `${RENDER_APP_URL}/api/auth/${provider}/login`;
      const params = new URLSearchParams({
        instanceId: instanceId,
        courseId: courseId,
        courseType: courseType,
        redirectUrl: window.location.href
      });
      
      // Show loading state
      formEl.style.display = 'none';
      loadingEl.style.display = 'block';
      
      // Redirect to OAuth provider
      window.location.href = `${authUrl}?${params.toString()}`;
    }
    
    /**
     * Check if user is returning from OAuth
     */
    function checkOAuthReturn() {
      const urlParams = new URLSearchParams(window.location.search);
      const authToken = urlParams.get('auth_token');
      const contactId = urlParams.get('contact_id');
      const authError = urlParams.get('auth_error');
      
      if (authError) {
        showError('Authentication failed: ' + authError);
        cleanUrl();
        return;
      }
      
      if (authToken && contactId) {
        console.log('Returning from OAuth, processing enrollment...');
        handleAuthenticatedEnrollment(authToken);
        cleanUrl();
      }
    }
    
    /**
     * Handle enrollment for authenticated user
     */
    async function handleAuthenticatedEnrollment(authToken) {
      try {
        formEl.style.display = 'none';
        loadingEl.style.display = 'block';
        
        const response = await fetch(`${RENDER_APP_URL}/api/auth/enroll/authenticated`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${authToken}`
          },
          body: JSON.stringify({
            instanceId: instanceId,
            courseType: courseType
          })
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          showSuccess(result);
          
          // Track conversion
          trackEnrollment('oauth', result);
        } else {
          throw new Error(result.message || 'Enrollment failed');
        }
        
      } catch (error) {
        console.error('Authenticated enrollment error:', error);
        showError(error.message);
      }
    }
    
    /**
     * Handle manual form submission
     */
    async function handleFormSubmit(e) {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const data = {
        givenName: formData.get('givenName'),
        familyName: formData.get('familyName'),
        email: formData.get('email'),
        courseId: courseId,
        courseType: courseType,
        instanceId: instanceId
      };
      
      // Validate
      if (!data.givenName || !data.familyName || !data.email) {
        showError('Please fill in all required fields.');
        return;
      }
      
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(data.email)) {
        showError('Please enter a valid email address.');
        return;
      }
      
      try {
        formEl.style.display = 'none';
        loadingEl.style.display = 'block';
        
        // Point to Render app for manual enrollment too
        const response = await fetch(`${RENDER_APP_URL}/api/axcelerate/enroll`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          showSuccess(result);
          
          // Track conversion
          trackEnrollment('manual', result);
        } else {
          throw new Error(result.message || 'Enrollment failed');
        }
      } catch (error) {
        console.error('Enrollment error:', error);
        showError(error.message);
      }
    }
    
    /**
     * Show success message
     */
    function showSuccess(result) {
      loadingEl.style.display = 'none';
      successEl.style.display = 'block';
      
      const messageEl = successEl.querySelector('.ax-success-message');
      if (messageEl) {
        messageEl.textContent = result.message || 
          'Your enrollment has been submitted successfully!';
      }
      
      // Scroll to success message
      successEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
      
      // If payment URL provided, redirect after delay
      if (result.data && result.data.paymentUrl) {
        setTimeout(() => {
          window.location.href = result.data.paymentUrl;
        }, 2000);
      }
    }
    
    /**
     * Show error message
     */
    function showError(message) {
      loadingEl.style.display = 'none';
      formEl.style.display = 'none';
      errorEl.style.display = 'block';
      
      const errorMsgEl = errorEl.querySelector('.ax-error-message');
      if (errorMsgEl) {
        errorMsgEl.textContent = message || 'Something went wrong. Please try again.';
      }
      
      // Scroll to error message
      errorEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
    
    /**
     * Track enrollment conversion
     */
    function trackEnrollment(method, result) {
      // Google Analytics 4
      if (window.gtag) {
        window.gtag('event', 'enrollment_submitted', {
          'event_category': 'Enrollment',
          'event_label': `${method} - Course ${courseId}`,
          'value': result.data?.cost || 0,
          'currency': 'AUD',
          'instance_id': instanceId,
          'course_type': courseType
        });
      }
      
      // Facebook Pixel
      if (window.fbq) {
        window.fbq('track', 'Lead', {
          content_name: 'Course Enrollment',
          content_category: courseType === 'p' ? 'Qualification' : 'Workshop',
          value: result.data?.cost || 0,
          currency: 'AUD'
        });
      }
      
      // Shopify Analytics
      if (window.Shopify && window.Shopify.analytics) {
        window.Shopify.analytics.publish('enrollment_completed', {
          method: method,
          instanceId: instanceId,
          courseType: courseType
        });
      }
    }
    
    /**
     * Clean URL parameters after processing
     */
    function cleanUrl() {
      if (window.history && window.history.replaceState) {
        const url = new URL(window.location.href);
        url.searchParams.delete('auth_token');
        url.searchParams.delete('contact_id');
        url.searchParams.delete('auth_error');
        window.history.replaceState({}, document.title, url.toString());
      }
    }
    
    // Initialize widget
    init();
  }
  
  // Wait for DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initWidget);
  } else {
    initWidget();
  }
})();
</script>
