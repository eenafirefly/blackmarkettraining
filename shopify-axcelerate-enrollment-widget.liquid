    widget.querySelectorAll('.ax-btn-back').forEach(btn => {
      btn.addEventListener('click', handleBack);
    });
    
    // Modal close
    const modalClose = elements.modal.querySelector('.ax-modal-close');
    const modalOk = elements.modal.querySelector('.ax-modal-ok');
    if (modalClose) modalClose.addEventListener('click', closeModal);
    if (modalOk) modalOk.addEventListener('click', closeModal);
  }
  
  // OAuth Login
  function handleOAuthLogin(provider) {
    console.log('Initiating OAuth login:', provider);
    console.log('Course data:', { instanceId, courseId, courseType });
    
    if (!instanceId) {
      alert('Error: Missing instance ID. Please make sure the URL has ?instance_id= parameter.');
      return;
    }
    
    const authUrl = `${RENDER_APP_URL}/api/auth/${provider}/login`;
    const params = new URLSearchParams({
      instanceId: instanceId,
      courseId: courseId || '',
      courseType: courseType || 'w',
      redirectUrl: window.location.href
    });
    
    const fullUrl = `${authUrl}?${params}`;
    console.log('Redirecting to:', fullUrl);
    
    window.location.href = fullUrl;
  }
  
  // Check OAuth return
  function checkOAuthReturn() {
    const urlParams = new URLSearchParams(window.location.search);
    authToken = urlParams.get('auth_token');
    contactId = urlParams.get('contact_id');
    const authError = urlParams.get('auth_error');
    
    console.log('Checking OAuth return:', { authToken: !!authToken, contactId, authError });
    
    if (authError) {
      showError('Authentication failed: ' + authError);
      cleanUrl();
      return false;
    }
    
    if (authToken && contactId) {
      console.log('âœ… OAuth successful! Auth token:', authToken, 'Contact ID:', contactId);
      console.log('Showing background step...');
      showStep('background');
      // Clean URL after a short delay to ensure step is shown
      setTimeout(() => cleanUrl(), 100);
      return true; // OAuth was successful
    }
    
    console.log('No OAuth return detected, will show login step');
    return false; // No OAuth return
  }
  
  // Manual form submission - Check for existing record
  async function handleManualFormSubmit(e) {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const email = formData.get('email');
    const givenName = formData.get('givenName');
    const familyName = formData.get('familyName');
    
    try {
      elements.form.style.display = 'none';
      elements.loading.style.display = 'block';
      
      // Check if contact exists
      console.log('Checking if contact exists:', email);
      const response = await fetch(`${RENDER_APP_URL}/api/axcelerate/contact/search?emailAddress=${encodeURIComponent(email)}`);
      
      if (response.ok) {
        const contacts = await response.json();
        console.log('Contact search result:', contacts);
        
        // Check if contacts is an array and has items
        if (Array.isArray(contacts) && contacts.length > 0) {
          // Existing record found - show modal
          console.log('âœ‹ Existing contact found, showing modal');
          showExistingRecordModal(email);
          elements.loading.style.display = 'none';
          elements.form.style.display = 'block';
          return;
        } else {
          console.log('âœ… No existing contact found, proceeding to create');
        }
      } else {
        console.log('âš ï¸ Contact search failed:', response.status);
      }
      
      // No existing record - create and proceed
      const createResponse = await fetch(`${RENDER_APP_URL}/api/enrollment/create`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          givenName: givenName,
          surname: familyName,
          email: email,
          instanceId: instanceId,
          courseType: courseType
        })
      });
      
      const result = await createResponse.json();
      
      if (result.success) {
        contactId = result.data.contactId;
        showStep('background');
      } else {
        throw new Error(result.message);
      }
      
    } catch (error) {
      console.error('Error:', error);
      showError(error.message);
    } finally {
      elements.loading.style.display = 'none';
      elements.form.style.display = 'block';
    }
  }
  
  // Background form submission
  async function handleBackgroundFormSubmit(e) {
    e.preventDefault();
    
    console.log('Background form submitted, moving to step 3...');
    
    // Store background form data temporarily
    const formData = new FormData(e.target);
    const customFields = {};
    
    for (let [key, value] of formData.entries()) {
      customFields[key] = value;
    }
    
    // Store in session storage for later
    sessionStorage.setItem('ax_background_data', JSON.stringify(customFields));
    
    // Move to personal details step
    showStep('personal');
  }
  
  // Personal form submission (placeholder for now)
  async function handlePersonalFormSubmit(e) {
    e.preventDefault();
    console.log('Personal form submitted, moving to step 4...');
    // TODO: Implement personal details collection
    showStep('contact');
  }
  
  // Contact/final form submission
  async function handleContactFormSubmit(e) {
    e.preventDefault();
    
    console.log('Final enrollment submission...');
    
    try {
      elements.form.style.display = 'none';
      elements.loading.style.display = 'block';
      
      // Get background data from storage
      const backgroundData = JSON.parse(sessionStorage.getItem('ax_background_data') || '{}');
      
      // For now, submit with background data only
      const response = await fetch(`${RENDER_APP_URL}/api/enrollment/create`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contactId: contactId,
          instanceId: instanceId,
          courseType: courseType,
          customFields: backgroundData
        })
      });
      
      const result = await response.json();
      
      if (result.success) {
        sessionStorage.removeItem('ax_background_data'); // Clean up
        showSuccess(result);
      } else {
        throw new Error(result.message);
      }
      
    } catch (error) {
      console.error('Error:', error);
      showError(error.message);
      elements.loading.style.display = 'none';
      elements.form.style.display = 'block';
    }
  }
  
  // Show step
  function showStep(step) {
    currentStep = step;
    
    // Hide all steps
    Object.values(elements).forEach(el => {
      if (el && el.classList && el.classList.contains('ax-step-content')) {
        el.style.display = 'none';
      }
    });
    
    // Show current step
    const stepElement = document.getElementById('ax-step-' + step + '-' + widgetId);
    if (stepElement) {
      stepElement.style.display = 'block';
    }
    
    // Update progress indicators
    const steps = widget.querySelectorAll('.ax-step');
    const stepOrder = ['login', 'background', 'personal', 'contact'];
    const currentIndex = stepOrder.indexOf(step);
    
    steps.forEach((stepEl, index) => {
      stepEl.classList.remove('active', 'completed');
      if (index < currentIndex) {
        stepEl.classList.add('completed');
      } else if (index === currentIndex) {
        stepEl.classList.add('active');
      }
    });
  }
  
  // Handle back button
  function handleBack() {
    const stepOrder = ['login', 'background', 'personal', 'contact'];
    const currentIndex = stepOrder.indexOf(currentStep);
    if (currentIndex > 0) {
      showStep(stepOrder[currentIndex - 1]);
    }
  }
  
  // Show existing record modal
  function showExistingRecordModal(email) {
    const emailEl = elements.modal.querySelector('#ax-modal-email');
    if (emailEl) {
      const masked = email.substring(0, 1) + '****' + email.substring(email.indexOf('@'));
      emailEl.textContent = masked;
    }
    elements.modal.style.display = 'block';
  }
  
  // Close modal
  function closeModal() {
    elements.modal.style.display = 'none';
  }
  
  // Show success
  function showSuccess(result) {
    elements.loading.style.display = 'none';
    elements.form.style.display = 'none';
    elements.success.style.display = 'block';
    
    const messageEl = elements.success.querySelector('.ax-success-message');
    if (messageEl) {
      messageEl.textContent = result.message || 'Your enrollment has been submitted!';
    }
  }
  
  // Show error
  function showError(message) {
    elements.loading.style.display = 'none';
    elements.form.style.display = 'none';
    elements.error.style.display = 'block';
    
    const errorMsgEl = elements.error.querySelector('.ax-error-message');
    if (errorMsgEl) {
      errorMsgEl.textContent = message;
    }
  }
  
  // Clean URL
  function cleanUrl() {
    if (window.history && window.history.replaceState) {
      const url = new URL(window.location.href);
      url.searchParams.delete('auth_token');
      url.searchParams.delete('contact_id');
      url.searchParams.delete('auth_error');
      window.history.replaceState({}, document.title, url.toString());
    }
  }
  
  // =========================================================================
  // Save/Resume Enrollment Progress
  // =========================================================================
  
  // Save enrollment progress
  function saveProgress() {
    if (contactId && currentStep !== 'login') {
      const progress = {
        contactId,
        authToken,
        currentStep,
        instanceId,
        courseId,
        courseType,
        backgroundData: sessionStorage.getItem('ax_background_data'),
        timestamp: Date.now()
      };
      localStorage.setItem('ax_enrollment_progress', JSON.stringify(progress));
      console.log('ðŸ“Œ Enrollment progress saved');
    }
  }
  
  // Restore enrollment progress
  function restoreProgress() {
    try {
      const saved = localStorage.getItem('ax_enrollment_progress');
      if (!saved) return false;
      
      const progress = JSON.parse(saved);
      
      // Check if progress is recent (within 7 days)
      const daysSince = (Date.now() - progress.timestamp) / (1000 * 60 * 60 * 24);
      if (daysSince > 7) {
        localStorage.removeItem('ax_enrollment_progress');
        return false;
      }
      
      // Only restore if for the same course
      if (progress.instanceId !== instanceId) {
        return false;
      }
      
      // Restore state
      contactId = progress.contactId;
      authToken = progress.authToken;
      if (progress.backgroundData) {
        sessionStorage.setItem('ax_background_data', progress.backgroundData);
      }
      
      console.log('âœ… Restored enrollment progress from', new Date(progress.timestamp).toLocaleString());
      
      // Show the step they were on
      elements.loading.style.display = 'none';
      elements.form.style.display = 'block';
      showStep(progress.currentStep);
      
      return true;
    } catch (error) {
      console.error('Error restoring progress:', error);
      return false;
    }
  }
  
  // Send resume email (using beacon for reliability)
  function sendResumeEmail() {
    if (!contactId || currentStep === 'login') return;
    
    try {
      console.log('ðŸ“§ Sending resume enrollment email...');
      
      const resumeUrl = window.location.href.split('?')[0] + 
        `?instance_id=${instanceId}&course_type=${courseType}&course_id=${courseId || ''}`;
      
      const data = new Blob([JSON.stringify({
        contactId,
        instanceId,
        resumeUrl,
        currentStep
      })], { type: 'application/json' });
      
      if (navigator.sendBeacon) {
        navigator.sendBeacon(`${RENDER_APP_URL}/api/enrollment/send-resume-email`, data);
      }
      
      console.log('âœ… Resume email queued');
    } catch (error) {
      console.error('Failed to send resume email:', error);
    }
  }
  
  // Detect when user is leaving
  let hasTriedToLeave = false;
  window.addEventListener('beforeunload', (e) => {
    if (contactId && currentStep !== 'login' && !hasTriedToLeave) {
      saveProgress();
      sendResumeEmail();
      hasTriedToLeave = true;
    }
  });
  
  // Auto-save progress periodically
  setInterval(() => {
    if (contactId && currentStep !== 'login') {
      saveProgress();
    }
  }, 30000); // Every 30 seconds
  
  // =========================================================================
  // Initialize
  // =========================================================================
  
  // Initialize widget
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      init();
      // Try to restore progress after init
      setTimeout(() => {
        if (!authToken && !contactId) {
          const restored = restoreProgress();
          if (restored) {
            console.log('ðŸ“‹ Enrollment resumed from previous session');
          }
        }
      }, 1000);
    });
  } else {
    init();
    // Try to restore progress after init
    setTimeout(() => {
      if (!authToken && !contactId) {
        const restored = restoreProgress();
        if (restored) {
          console.log('ðŸ“‹ Enrollment resumed from previous session');
        }
      }
    }, 1000);
  }
})();
