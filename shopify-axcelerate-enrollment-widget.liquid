</style>

<script>
(function() {
  'use strict';
  
  // âš ï¸ UPDATE THIS TO YOUR RENDER APP URL
  const RENDER_APP_URL = 'https://blackmarkettraining.onrender.com';
  
  const widgetId = '{{ widget_id }}';
  const widget = document.getElementById('ax-enrol-widget-' + widgetId);
  
  if (!widget) {
    console.error('Widget element not found: ax-enrol-widget-' + widgetId);
    return;
  }
  
  // Read from data attributes first (passed from Liquid)
  let courseId = widget.dataset.courseId;
  let courseType = widget.dataset.courseType;
  let instanceId = widget.dataset.instanceId;
  
  // FALLBACK: If data attributes are empty, read directly from URL
  if (!instanceId || !courseType) {
    const urlParams = new URLSearchParams(window.location.search);
    courseId = courseId || urlParams.get('course_id');
    courseType = courseType || urlParams.get('course_type');
    instanceId = instanceId || urlParams.get('instance_id');
    
    console.log('ðŸ“Œ Data attributes empty, read from URL:', { courseId, courseType, instanceId });
  }
  
  console.log('Widget initialized:', { widgetId, courseId, courseType, instanceId });
  
  const elements = {
    loading: document.getElementById('ax-loading-' + widgetId),
    error: document.getElementById('ax-error-' + widgetId),
    form: document.getElementById('ax-form-' + widgetId),
    success: document.getElementById('ax-success-' + widgetId),
    stepLogin: document.getElementById('ax-step-login-' + widgetId),
    stepBackground: document.getElementById('ax-step-background-' + widgetId),
    stepPersonal: document.getElementById('ax-step-personal-' + widgetId),
    stepContact: document.getElementById('ax-step-contact-' + widgetId),
    modal: document.getElementById('ax-existing-record-modal-' + widgetId),
    courseTitle: document.getElementById('ax-course-title-' + widgetId)
  };
  
  // Verify all required elements exist
  console.log('Elements found:', {
    loading: !!elements.loading,
    error: !!elements.error,
    form: !!elements.form,
    stepLogin: !!elements.stepLogin,
    stepBackground: !!elements.stepBackground
  });
  
  let currentStep = 'login';
  let authToken = null;
  let contactId = null;
  let courseName = '';
  
  // Initialize
  function init() {
    // Fetch and display course details
    fetchCourseDetails();
    
    // Check if user is returning from OAuth
    const hasOAuthReturn = checkOAuthReturn();
    
    setTimeout(() => {
      elements.loading.style.display = 'none';
      elements.form.style.display = 'block';
      
      // Only show login step if OAuth didn't succeed
      if (!hasOAuthReturn) {
        showStep('login');
      }
    }, 500);
    
    setupEventListeners();
  }
  
  // Fetch course details and form template
  async function fetchCourseDetails() {
    if (!instanceId) {
      console.log('No instance ID, skipping course fetch');
      return;
    }
    
    try {
      console.log('Fetching enrollment form for instance:', instanceId);
      
      // Get URL parameter for template ID if provided
      const urlParams = new URLSearchParams(window.location.search);
      const templateID = urlParams.get('template_id') || urlParams.get('templateID');
      
      let url = `${RENDER_APP_URL}/api/axcelerate/enrollment-form/${instanceId}?type=${courseType || 'w'}`;
      if (templateID) {
        url += `&templateID=${templateID}`;
      }
      
      const response = await fetch(url);
      
      if (response.ok) {
        const data = await response.json();
        
        // Set course name
        if (data.course) {
          courseName = data.course.name || 'Course';
          if (elements.courseTitle) {
            elements.courseTitle.textContent = courseName;
            elements.courseTitle.style.display = 'block';
          }
          console.log('Course loaded:', courseName);
        }
        
        // Render dynamic form fields if available
        if (data.form && data.form.fields && data.form.fields.length > 0) {
          console.log('Rendering dynamic form with', data.form.fields.length, 'fields');
          renderDynamicFormFields(data.form.fields);
        } else {
          console.log('No dynamic form fields, using static form');
          if (data.form && data.form.error) {
            console.warn('Form template error:', data.form.error);
          }
        }
      } else {
        console.warn('Failed to fetch enrollment form:', response.status);
      }
    } catch (error) {
      console.error('Error fetching enrollment form:', error);
    }
  }
  
  // Render dynamic form fields from aXcelerate template
  function renderDynamicFormFields(fields) {
    const backgroundForm = document.getElementById('ax-background-form-' + widgetId);
    if (!backgroundForm) {
      console.error('Background form not found');
      return;
    }
    
    // Find the container for fields (before the button group)
    const buttonGroup = backgroundForm.querySelector('.ax-button-group');
    if (!buttonGroup) {
      console.error('Button group not found in form');
      return;
    }
    
    // Create a container for dynamic fields
    let dynamicContainer = backgroundForm.querySelector('.ax-dynamic-fields');
    if (!dynamicContainer) {
      dynamicContainer = document.createElement('div');
      dynamicContainer.className = 'ax-dynamic-fields';
      backgroundForm.insertBefore(dynamicContainer, buttonGroup);
    }
    
    // Clear existing dynamic fields
    dynamicContainer.innerHTML = '';
    
    // Hide static fields (keep them as fallback but hidden)
    const staticFields = backgroundForm.querySelectorAll('.ax-form-group:not(.ax-button-group)');
    staticFields.forEach(field => {
      if (!field.closest('.ax-dynamic-fields')) {
        field.style.display = 'none';
      }
    });
    
    console.log('Rendering', fields.length, 'dynamic form fields');
    
    // Render each field from the template
    fields.forEach((field, index) => {
      const fieldElement = createFormField(field, index);
      if (fieldElement) {
        dynamicContainer.appendChild(fieldElement);
      }
    });
  }
  
  // Create a form field element from aXcelerate field definition
  function createFormField(field, index) {
    const fieldGroup = document.createElement('div');
    fieldGroup.className = 'ax-form-group';
    
    // Get field properties
    const fieldName = field.name || field.fieldName || `field_${index}`;
    const fieldLabel = field.label || field.displayName || fieldName;
    const fieldType = field.type || field.fieldType || 'text';
    const isRequired = field.required || field.mandatory || false;
    const helpText = field.helpText || field.description || '';
    const options = field.options || field.values || [];
    
    // Create label
    const label = document.createElement('label');
    label.textContent = fieldLabel;
    if (isRequired) {
      const required = document.createElement('span');
      required.className = 'ax-required';
      required.textContent = '*';
      label.appendChild(required);
    }
    fieldGroup.appendChild(label);
    
    // Create input based on field type
    let input;
    
    switch (fieldType.toLowerCase()) {
      case 'select':
      case 'dropdown':
      case 'list':
        input = document.createElement('select');
        input.className = 'ax-input';
        
        // Add default option
        const defaultOption = document.createElement('option');
        defaultOption.value = '';
        defaultOption.textContent = 'Select...';
        input.appendChild(defaultOption);
        
        // Add options
        options.forEach(opt => {
          const option = document.createElement('option');
          option.value = typeof opt === 'string' ? opt : (opt.value || opt.id);
          option.textContent = typeof opt === 'string' ? opt : (opt.label || opt.name || opt.value);
          input.appendChild(option);
        });
        break;
        
      case 'textarea':
      case 'multiline':
        input = document.createElement('textarea');
        input.className = 'ax-input';
        input.rows = field.rows || 4;
        break;
        
      case 'checkbox':
      case 'bool':
      case 'boolean':
        input = document.createElement('input');
        input.type = 'checkbox';
        input.className = 'ax-checkbox';
        break;
        
      case 'radio':
        // Create radio group
        const radioGroup = document.createElement('div');
        radioGroup.className = 'ax-radio-group';
        
        options.forEach((opt, i) => {
          const radioWrapper = document.createElement('label');
          radioWrapper.className = 'ax-radio-label';
          
          const radio = document.createElement('input');
          radio.type = 'radio';
          radio.name = fieldName;
          radio.value = typeof opt === 'string' ? opt : (opt.value || opt.id);
          radio.className = 'ax-radio';
          if (isRequired) radio.required = true;
          
          const span = document.createElement('span');
          span.textContent = typeof opt === 'string' ? opt : (opt.label || opt.name || opt.value);
          
          radioWrapper.appendChild(radio);
          radioWrapper.appendChild(span);
          radioGroup.appendChild(radioWrapper);
        });
        
        fieldGroup.appendChild(radioGroup);
        
        // Add help text if present
        if (helpText) {
          const help = document.createElement('p');
          help.className = 'ax-help-text';
          help.textContent = helpText;
          fieldGroup.appendChild(help);
        }
        
        return fieldGroup;
        
      case 'date':
        input = document.createElement('input');
        input.type = 'date';
        input.className = 'ax-input';
        break;
        
      case 'number':
      case 'integer':
        input = document.createElement('input');
        input.type = 'number';
        input.className = 'ax-input';
        if (field.min !== undefined) input.min = field.min;
        if (field.max !== undefined) input.max = field.max;
        break;
        
      case 'email':
        input = document.createElement('input');
        input.type = 'email';
        input.className = 'ax-input';
        break;
        
      case 'tel':
      case 'phone':
        input = document.createElement('input');
        input.type = 'tel';
        input.className = 'ax-input';
        break;
        
      default:
        input = document.createElement('input');
        input.type = 'text';
        input.className = 'ax-input';
    }
    
    if (input) {
      input.name = fieldName;
      input.id = `ax-field-${fieldName}-${widgetId}`;
      if (isRequired && fieldType.toLowerCase() !== 'radio') {
        input.required = true;
      }
      if (field.placeholder) {
        input.placeholder = field.placeholder;
      }
      
      fieldGroup.appendChild(input);
      
      // Add help text if present
      if (helpText) {
        const help = document.createElement('p');
        help.className = 'ax-help-text';
        help.textContent = helpText;
        fieldGroup.appendChild(help);
      }
    }
    
    return fieldGroup;
  }
  
  function setupEventListeners() {
    // Social login buttons
    const googleBtn = widget.querySelector('.ax-google-btn');
    const axcelerateBtn = widget.querySelector('.ax-axcelerate-btn');
    
    if (googleBtn) {
      googleBtn.addEventListener('click', () => handleOAuthLogin('google'));
    }
    if (axcelerateBtn) {
      axcelerateBtn.addEventListener('click', () => handleOAuthLogin('axcelerate'));
    }
    
    // Manual form
    const manualForm = document.getElementById('ax-manual-form-' + widgetId);
    if (manualForm) {
      manualForm.addEventListener('submit', handleManualFormSubmit);
    }
    
    // Background form
    const backgroundForm = document.getElementById('ax-background-form-' + widgetId);
    if (backgroundForm) {
      backgroundForm.addEventListener('submit', handleBackgroundFormSubmit);
    }
    
    // Personal form
    const personalForm = document.getElementById('ax-personal-form-' + widgetId);
    if (personalForm) {
      personalForm.addEventListener('submit', handlePersonalFormSubmit);
    }
    
    // Contact form
    const contactForm = document.getElementById('ax-contact-form-' + widgetId);
    if (contactForm) {
      contactForm.addEventListener('submit', handleContactFormSubmit);
    }
    
