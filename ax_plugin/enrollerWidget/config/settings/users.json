{
    "login_or_create": {
        "TYPE": "select",
        "TITLE": "Determines if the User Login step allows contact creation - or requires existing user accounts.",
        "DISPLAY": "Require Login",
        "VALUES": [
            {
                "DISPLAY": "Yes",
                "VALUE": 0
            },
            {
                "DISPLAY": "No",
                "VALUE": 1
            }
        ],
        "DEFAULT_VALUE": 1,
        "GROUPING": "Returning Users"
    },
    "create_user_start": {
        "TYPE": "select",
        "TITLE": "Create Users when a contact is created through the User Login step.",
        "DISPLAY": "New Contact - User",
        "VALUES": [
            {
                "DISPLAY": "Yes",
                "VALUE": 1
            },
            {
                "DISPLAY": "No",
                "VALUE": 0
            }
        ],
        "DEFAULT_VALUE": 0,
        "GROUPING": "Returning Users",
        "AVAILABLE_ENVS": {
            "wordpress": true,
            "axcelerate": false,
            "agent-portal": false,
            "client-portal": false
        }
    },

    "contact_validation_check": {
        "TYPE": "select",
        "TITLE": "<p>Add a check to identify existing contacts with the same email address</p><p>If any contacts are found it will generate a resumption email that will allow them to continue enrolment, but not progress beyond the Login Step.</p><p>Only applies to Wordpress Enrolment Widgets.</p>",
        "DISPLAY": "Validate On Create",
        "VALUES": [
            {
                "DISPLAY": "Yes",
                "VALUE": 1
            },
            {
                "DISPLAY": "No",
                "VALUE": 0
            }
        ],
        "DEFAULT_VALUE": 0,
        "GROUPING": "Returning Users",
        "AVAILABLE_ENVS": {
            "wordpress": true,
            "axcelerate": false,
            "agent-portal": false,
            "client-portal": false
        }
    },

    "disallow_contact_switch_on_validate": {
        "TYPE": "select",
        "TITLE": "If a contact is found, do not allow the user to continue in the form, require they go to the email.",
        "DISPLAY": "Allow Validate On Create Close",
        "VALUES": [
            {
                "DISPLAY": "Allow Closing",
                "VALUE": 0
            },
            {
                "DISPLAY": "Prevent Closing",
                "VALUE": 1
            }
        ],
        "DEFAULT_VALUE": 0,
        "GROUPING": "Returning Users",
        "AVAILABLE_ENVS": {
            "wordpress": true,
            "axcelerate": false,
            "agent-portal": false,
            "client-portal": false
        }
    },
    "custom_validate_message": {
        "TYPE": "textarea",
        "TITLE": "Add to the contact validation message.",
        "DISPLAY": "Additional Content Validation Message",
        "GROUPING": "Returning Users"
    },

    "contact_create_only": {
        "TYPE": "select",
        "TITLE": "Only Show the Contact Create Option",
        "DISPLAY": "Only New Students",
        "VALUES": [
            {
                "DISPLAY": "Yes",
                "VALUE": 1
            },
            {
                "DISPLAY": "No",
                "VALUE": 0
            }
        ],
        "DEFAULT_VALUE": 0,
        "GROUPING": "Returning Users"
    },

    "confirm_emails": {
        "TYPE": "select",
        "TITLE": "Adds a confirm email input to contact create forms, requiring double entry of email addresses",
        "DISPLAY": "Confirm Emails",
        "VALUES": [
            {
                "DISPLAY": "Yes",
                "VALUE": 1
            },
            {
                "DISPLAY": "No",
                "VALUE": 0
            }
        ],
        "DEFAULT_VALUE": 0,
        "GROUPING": "Returning Users"
    },

