  async function handleFileUpload(fieldId, stepId) {
    const fileInput = document.getElementById(`ax-${fieldId}-${widgetId}`);
    const currentFilesList = document.getElementById(`ax-current-files-${fieldId}-${widgetId}`);
    const loadingModal = document.getElementById(`ax-upload-loading-${widgetId}`);
    const successModal = document.getElementById(`ax-upload-success-${widgetId}`);
    
    if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
      alert('Please select at least one file to upload');
      return;
    }
    
    console.log(`üì§ Uploading ${fileInput.files.length} file(s) for ${fieldId}...`);
    
    // Show loading modal
    if (loadingModal) {
      loadingModal.style.display = 'flex';
    }
    
    // Get portfolio configuration from the field config
    const config = stepConfigs[stepId];
    const fieldConfig = config?.fields?.find(f => f.fieldId === fieldId);
    
    const uploadFormData = new FormData();  // Renamed to avoid shadowing global formData
    uploadFormData.append('contactId', contactId);
    uploadFormData.append('fieldId', fieldId);
    uploadFormData.append('stepId', stepId);
    
    // Add portfolio parameters for Axcelerate
    if (fieldConfig) {
      if (fieldConfig.portfolioChecklistId) {
        uploadFormData.append('portfolioChecklistId', fieldConfig.portfolioChecklistId);
        console.log(`   üé´ Portfolio Checklist ID: ${fieldConfig.portfolioChecklistId}`);
      }
      if (fieldConfig.portfolioItemType) {
        uploadFormData.append('portfolioItemType', fieldConfig.portfolioItemType);
        console.log(`   üìã Portfolio Item Type: ${fieldConfig.portfolioItemType}`);
      }
    }
    
    // Add all selected files
    Array.from(fileInput.files).forEach((file, index) => {
      uploadFormData.append('files', file);
      console.log(`   üìÑ File ${index + 1}: ${file.name} (${(file.size / 1024).toFixed(2)} KB)`);
    });
    
    try {
      const response = await fetch(`${RENDER_APP_URL}/api/enrollment/upload-documents`, {
        method: 'POST',
        body: uploadFormData
      });
      
      if (!response.ok) {
        const errorData = await response.json().catch(() => ({ message: 'Unknown error' }));
        console.error('‚ùå Upload failed:', response.status, errorData);
        throw new Error(errorData.message || `Upload failed with status ${response.status}`);
      }
      
      const result = await response.json();
      
      if (!result.success) {
        throw new Error(result.message || 'Upload failed');
      }
      
      console.log('‚úÖ Files uploaded successfully to Axcelerate Portfolio:', result);
      
      // Hide loading modal
      if (loadingModal) {
        loadingModal.style.display = 'none';
      }
      
      // Show success modal
      if (successModal) {
        successModal.style.display = 'flex';
        // Auto-close after 2 seconds
        setTimeout(() => {
          successModal.style.display = 'none';
        }, 2000);
      }
      
      // Update current files list
      updateCurrentFilesList(fieldId, result.files || []);
      
      // Clear file input
      fileInput.value = '';
      
      // Save progress - IMPORTANT: Only save if upload succeeded
      if (!formData[stepId]) {
        formData[stepId] = {};
      }
      formData[stepId][fieldId] = result.files;
      sessionStorage.setItem(`ax_form_${stepId}`, JSON.stringify(formData[stepId]));
      saveProgress();
      
      // Check if all required documents are uploaded to enable next step
      const isStepComplete = validateStepRequiredFields(stepId);
      if (isStepComplete) {
        console.log('‚úÖ All required documents uploaded - marking step complete');
        markStepCompleted(stepId);
        
        // Enable next step
        const currentIndex = formSteps.findIndex(s => s.id === stepId);
        if (currentIndex >= 0 && currentIndex < formSteps.length - 1) {
          const nextStep = formSteps[currentIndex + 1];
          enableStep(nextStep.id);
        }
      }
      
    } catch (error) {
      console.error('‚ùå File upload error:', error);
      
      // Hide loading modal
      if (loadingModal) {
        loadingModal.style.display = 'none';
      }
      
      alert(`‚ùå Failed to upload files to Axcelerate: ${error.message}\n\nPlease try again.`);
      
      // Don't save to formData if upload failed - this prevents step from being marked complete
      console.warn('‚ö†Ô∏è Upload failed - files not added to formData');
    }
  }
  
